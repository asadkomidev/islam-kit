{
  "name": "@islam-kit/prayer-times",
  "version": "1.0.0",
  "description": "Calculate and format daily Islamic prayer times with multiple calculation methods",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "islam",
    "prayer",
    "salah",
    "salat",
    "fajr",
    "dhuhr",
    "asr",
    "maghrib",
    "isha",
    "muslim",
    "adhan",
    "athan"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asadkomidev/islam-kit.git",
    "directory": "packages/prayer-times"
  },
  "bugs": {
    "url": "https://github.com/asadkomidev/islam-kit/issues"
  },
  "homepage": "https://github.com/asadkomidev/islam-kit/tree/main/packages/prayer-times#readme",
  "devDependencies": {
    "@islam-kit/eslint-config": "workspace:*",
    "@islam-kit/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^8.57.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
